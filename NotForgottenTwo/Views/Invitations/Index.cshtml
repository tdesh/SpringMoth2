@model IEnumerable<NotForgottenTwo.Models.Invitation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InviteeEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InviteSentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastReminderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InviteAccepted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InviteeEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InviteSentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastReminderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InviteAccepted)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
