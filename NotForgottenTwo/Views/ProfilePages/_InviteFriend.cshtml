@model NotForgottenTwo.Models.InvitationViewModel

<form id="InviteFriends">
    @Html.AntiForgeryToken()
    <div id="InviteForm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">×</a>
                    <h3>Invite a Friend</h3>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.HiddenFor(Model => Model.InvitedToProfilePageId)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="control-label col-md-2">
                                To
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-2">
                                Message
                            </div>
                            <div class="col-md-10">
                                @*@Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })*@
                                <textarea id="Message" name ="Message" rows="4" col=5 class="form-control">Hi,&#10;I would like to invite you to share a story about @Model.InvitedToProfilePageName.</textarea>
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input class="btn btn-success" value="Send Invite" id="submitInvite" />
                    <a href="#" class="btn" data-dismiss="modal">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>